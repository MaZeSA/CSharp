<Window x:Class="HorseRacing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorseRacing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Center" Padding="10" Margin="10" Click="Button_Click">Start</Button>
        <StackPanel x:Name="staskProgress" DockPanel.Dock="Top">
            <ProgressBar Height="30" Margin="2" Foreground="#FF82B006"></ProgressBar>
            <ProgressBar Height="30" Margin="2" Foreground="#FF06A8B0"></ProgressBar>
            <ProgressBar Height="30" Margin="2" Foreground="#FF454AB4"></ProgressBar>
            <ProgressBar Height="30" Margin="2" Foreground="#FF75367C"></ProgressBar>
            <ProgressBar Height="30" Margin="2" Foreground="#FF367C46"/>
        </StackPanel>
        <TextBlock x:Name="txtResult" DockPanel.Dock="Bottom"></TextBlock>
    </DockPanel>
</Window>
