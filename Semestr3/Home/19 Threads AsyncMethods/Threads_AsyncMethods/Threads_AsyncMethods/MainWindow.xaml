<Window x:Class="Threads_AsyncMethods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Threads_AsyncMethods"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel Margin="5" DockPanel.Dock="Top" Orientation="Horizontal" Background="#FFE8E8FF">
            <Label>Count Progres Bar:</Label>
            <TextBox Margin="3" Name="txtCount" Width="100"></TextBox>
            <Button Margin="3" Padding="5" Click="Button_Click">Start</Button>
        </StackPanel>
        <DockPanel Name="dockProgress" HorizontalAlignment="Center">
        </DockPanel>
    </DockPanel>
</Window>
