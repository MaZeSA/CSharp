@model IEnumerable<Product>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
         <div class="col-6 text-right">
            <a asp-action="CreateEdit" asp-controller="Product" class="btn-primary btn" >New product</a>
        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Category</td>
                    <td>Image</td>
                </tr>
                       <tbody>
                @foreach(var product in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(@product.Name, "Detalis", "Product", new { id = product.Id }, null)</td>
                        <td>@product.Price</td> 
                        <td>@product.Category.Name</td>
                        <td><img src="@product.Image" alt="Sample Image" width="200px"/></td>
                        <td class="text-center">
                            <div class="w-75 btn-group"> 
                                <a asp-action="CreateEdit" asp-route-Id="@product.Id" class="btn btn-warning mx-2" asp-controller="Product">Edit</a>
                                <a asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-2" asp-controller="Product">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
            </thead>
        </table>
    }
    else
    {
        <p>No product found.</p>
    }


</div>